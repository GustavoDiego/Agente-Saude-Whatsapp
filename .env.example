# ===============================
# Configurações do Servidor
# ===============================
APP_NAME="ClinicAI WhatsApp Agent"
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000

# ===============================
# Segurança
# ===============================
APP_SECRET="troque_por_uma_chave_unica"
HASH_SALT="troque_por_um_salt_unico"

# ===============================
# Banco de Dados (MongoDB)
# ===============================
